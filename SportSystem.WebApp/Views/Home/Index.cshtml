@model SportSystem.WebApp.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Home";
}
<div class="jumbotron" id="jumbo">
    <h1></h1>
    <img src="/Content/arsenal.png" id="arsenal"/>
    <img src="/Content/Barsa.png" id="barsa" />
    <img src="/Content/Chelsea.png" id="chelsi" />
    <img src="/Content/Pool.png" id="pool" />
    <img src="/Content/Real.png" id="real" />
    <img src="/Content/United.png" id="united" />
    <img src="/Content/Champion.png" id="champion" />
</div>
<div class="container-fluid" style="background-image: url(/Content/Image/duwxnD.jpg)">
  
    <div class="row" id>
        <div class="col-md-6 bs-callout bs-callout-info">
            <h2>Top Matches:</h2>
            @Html.DisplayFor(x => x.TopMatches)
            @Html.ActionLink("All Matches", "Index", "Matches", null, new {@class = "btn btn-default"})
        </div>

        <div class="col-md-6">
            <h2>Best Teams:</h2>
            @Html.DisplayFor(x => x.BestTeams)
        </div>
    </div>
</div>

